@model Badges.Models.Shared.ExperienceViewModel

<div id="work-container" class="container work">
    <div class="row">
        @foreach (var work in @Model.SupportingWorks)
        {
        	@* <div class="col-md-4"> *@
	            <div class="@work.Type work-item-box">
	                @Html.Partial("_ViewWork", work)
                    @if (Model.Experience.Creator.Identifier == User.Identity.Name)
                    {
                        <p class="work-desc">
                            <a href="@Url.Action("DeleteWorkFile", "Experience", new { area=string.Empty, id = work.Id})" >
                                <i class="icon-remove"></i> Delete
                            </a>
                        </p>
                    }
	            </div>
            @* </div> *@
        }
    </div>
</div>
